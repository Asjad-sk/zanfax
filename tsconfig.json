{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": false, // Disable all strict type-checking options
    "noEmit": false, // Enable emitting output files
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "module": "esnext", // Set the module system to ESNext
    "moduleResolution": "node", // Use Node module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON modules
    "isolatedModules": true, // Ensure all files can be transpiled independently
    "jsx": "preserve", // Preserve JSX for React's JSX transformation
    "incremental": true, // Enable incremental compilation
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
